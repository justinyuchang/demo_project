<div class="container">
  <div class="row">
  
    <div class="col">
    </div>
  
    <div class="col">  
      <div>
        <%- if controller_name != 'sessions' %>
          <%= link_to "使用者登入", new_session_path(resource_name), class: 'btn btn-light' %>
        <% end %>
      </div>
      <div>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "使用者註冊", new_registration_path(resource_name), class: 'btn btn-light' %>
        <% end %>
      </div>
      <div>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "你～忘記密碼了嗎", new_password_path(resource_name), class: 'btn btn-light'  %>
        <% end %>
      </div>
      <div>
        <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
          <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'btn btn-light'  %>
        <% end %>
      </div>
      <div>
        <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
          <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'btn btn-light'  %>
        <% end %>
      </div>
      <div>          
        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) , class: 'btn btn-light' %>
          <% end %>
        <% end %>
      </div>
      <div>
        <i class="fab fa-facebook"></i>
      </div>
  
    </div>
  
    <div class="col">
    </div>
  
  </div>
</div>  
